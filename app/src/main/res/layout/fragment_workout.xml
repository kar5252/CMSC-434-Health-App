<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#ebf5ff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Target Muscle"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <GridLayout
            android:id="@+id/muscleSelectionGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:padding="12dp">

            <Button
                android:id="@+id/muscleChest"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:text="  Chest  "
                android:textSize="20sp"
                android:gravity="center"
                android:padding="12dp" />

            <Button
                android:id="@+id/muscleLegs"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:text="  Legs   "
                android:textSize="20sp"
                android:gravity="center"
                android:padding="12dp" />

            <Button
                android:id="@+id/muscleBack"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:text="  Back   "
                android:textSize="20sp"
                android:gravity="center"
                android:padding="12dp" />

            <Button
                android:id="@+id/muscleShoulders"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:text="Shoulders"
                android:textSize="20sp"
                android:gravity="center"
                android:padding="12dp" />

            <Button
                android:id="@+id/muscleArms"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:text="  Arms   "
                android:textSize="20sp"
                android:gravity="center"
                android:padding="12dp" />

            <Button
                android:id="@+id/muscleCore"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:text="  Core   "
                android:textSize="20sp"
                android:gravity="center"
                android:padding="12dp" />
        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workout Recommendations"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <ListView
            android:id="@+id/workoutListView"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="4dp"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exercise Name"
            android:textSize="22sp"
            android:gravity="center" />

        <EditText
            android:id="@+id/exerciseNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter exercise name"
            android:textSize="20sp"
            android:padding="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reps"
            android:textSize="22sp"
            android:gravity="center" />

        <EditText
            android:id="@+id/repsInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter reps"
            android:textSize="20sp"
            android:padding="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sets"
            android:textSize="22sp"
            android:gravity="center" />

        <EditText
            android:id="@+id/setsInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter sets"
            android:textSize="20sp"
            android:padding="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration (minutes)"
            android:textSize="22sp"
            android:gravity="center" />

        <EditText
            android:id="@+id/durationInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter duration"
            android:textSize="20sp"
            android:padding="10dp" />

        <Button
            android:id="@+id/confirmWorkoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Workout"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:padding="16dp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/previousWorkoutsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Previous Workouts"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:padding="16dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
