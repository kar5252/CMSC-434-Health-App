<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Workout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Target Muscle"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/muscleDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Workout Duration"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/durationDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reps / Sets"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/repsSetsInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter reps and sets (e.g., 3x10)"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout Recommendations"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />

        <ListView
            android:id="@+id/workoutListView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:padding="8dp" />

        <Button
            android:id="@+id/confirmWorkoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Workout"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:padding="8dp" />

        <Button
            android:id="@+id/previousWorkoutsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous Workouts"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
