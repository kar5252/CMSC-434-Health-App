<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="1dp"
    android:background="@color/white"
    tools:context=".Home">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:background="@drawable/round_rectangle"
        android:paddingBottom="40dp">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_picture"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="68dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ImageView.Circle"
            app:srcCompat="@drawable/user" />
        <LinearLayout
            android:id="@+id/user_horiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_picture"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="FirstName LastName"
                android:textColor="#2E3ADD"
                android:textSize="30sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/edit_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/grey_circle"
                android:padding="10dp"
                android:src="@drawable/edit_icon"
                app:tint="@color/white"
                />
        </LinearLayout>






    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id = "@+id/progress_rect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/progress_background"
        android:orientation="vertical"
        android:padding="10dp"
        android:clickable="true"
        android:layout_margin="16dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="0dp"
            android:paddingBottom="10dp"
            android:text="Daily Exercise Goal"
            android:textColor="#2E3ADD"
            android:textSize="25sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id = "@+id/dumbell_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/dumbell_icon"
                android:layout_marginEnd="12dp"/>
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="500dp"
                android:layout_height="20dp"
                android:progress="60"
                android:scaleY="3"
                android:paddingLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingTop="3dp"
                android:text="60%"
                android:textColor="#2E3ADD"
                android:textSize="20sp" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id = "@+id/progress_rect_cal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/progress_background"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="16dp"
        android:clickable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="1dp"
            android:paddingBottom="10dp"
            android:text="Daily Calorie Goal"
            android:textColor="#2E3ADD"
            android:textSize="25sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id = "@+id/salad"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/salad"
                android:layout_marginEnd="12dp"/>
            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="500dp"
                android:layout_height="20dp"
                android:progress="30"
                android:scaleY="3"
                android:paddingLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingTop="3dp"
                android:text="30%"
                android:textColor="#2E3ADD"
                android:textSize="20sp" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp">


        <TextView
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:text="Weekly Progress- 3 Day Streak!"
            android:textColor="#2E3ADD"
            android:textSize="40sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”¥"
            android:textSize="35sp"
            android:layout_marginStart="2dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/water_bottle"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/drink_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#2E3ADD"
            android:text="add 8 oz"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/water_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="0 oz"
            android:textColor="#2E3ADD"
            android:textSize="30sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="350dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/filled_bottle"
                android:layout_width="200dp"
                android:layout_height="400dp"
                android:layout_marginTop="-90dp"
                android:alpha="0"
                android:src="@drawable/filled_water" />

            <ImageView
                android:id="@+id/bottle"
                android:layout_width="200dp"
                android:layout_height="400dp"
                android:layout_marginTop="-90dp"
                android:src="@drawable/water_824188" />


        </FrameLayout>


    </LinearLayout>


</LinearLayout>





